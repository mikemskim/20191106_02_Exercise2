<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp"
    tools:menu="@menu/store_item_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게임이름"
                android:textSize="18sp"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/gameCompanyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제조사"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                />

            <RatingBar
                android:id="@+id/gameRating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gameInstalledImage"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/img_checkbox"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/gamePriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#B3C16C"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
